<?xml version="1.0" encoding="utf-8"?>
<install type="JForcePlugin" plugin="standard">
	<name>Gravatar</name>
	<author>Extreme Joomla</author>
	<creationDate>January 2009</creationDate>
	<copyright>Copyright (C) 2009 - Extreme Joomla</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>sales@extremejoomla.com</authorEmail>
	<authorUrl>www.extremejoomla.com</authorUrl>
	<version>2.0</version>
	<description>Gravatar Integration</description>
	<folder>gravatar</folder>
	<files>
		<filename>gravatar.php</filename>
		<filename>index.html</filename>
	</files>
	<params>
		<param name="size" type="text" default="" label="Icon Size" description="Authorize.net Login ID" />
		<param name="transaction_key" type="text" default="" label="API Transaction Key" description="Authorize.net Transaction Key" />
		<param name="name" type="radio" default="1" label="Show Name Fields" description="Display Name Fields on Payment Form">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="address" type="radio" default="1" label="Show Address Fields" description="Display Address Fields on Payment Form">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="email" type="radio" default="1" label="Show Email Field" description="Display Email Field on Payment Form">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="phone" type="radio" default="1" label="Show Phone Field" description="Display Phone Field on Payment Form">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
	</params>
</install>