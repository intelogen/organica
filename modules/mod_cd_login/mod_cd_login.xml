			<option value="0">PARAM_GREETING_01</option>
			<option value="1">PARAM_GREETING_02</option>
		</param>
		<param name="name" type="list" default="0" label="LABEL_NAME">
			<option value="0">PARAM_NAME_01</option>
			<option value="1">PARAM_NAME_02</option>
		</param>
		<param name="usesecure" type="radio" default="0" label="LABEL_ENCRYPT" description="DESC_ENCRYPT">
			<option value="0">PARAM_ENCRYPT_01</option>
			<option value="1">PARAM_ENCRYPT_02</option>
		</param>
    </params>
    <params group="advanced">
      <param name="cache" type="list" default="1" label="CACHING" description="SELECT WHETHER TO CACHE THE CONTENT OF THIS MODULE">
			<option value="0">NEVER</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
