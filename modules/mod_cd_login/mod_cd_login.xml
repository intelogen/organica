	<params>
		<param name="moduleclass_sfx" type="text" default="" label="MODULE CLASS SUFFIX" description="PARAMMODULECLASSSUFFIX" />
		<param name="pretext" type="textarea" cols="30" rows="5" default="" label="LABEL_PRETEXT" description="DESC_PRETEXT" />
		<param name="posttext" type="textarea" cols="30" rows="5" label="LABEL_POSTTEXT" description="DESC_POSTTEXT" />
		<param name="login" type="menuitem" default="" disable="separator" label="LABEL_LOGIN_REDIRECT" description="DESC_LOGIN_REDIRECT" />
		<param name="logout" type="menuitem" default="" disable="separator" label="LABEL_LOGOUT_REDIRECT" description="DESC_LOGOUT_REDIRECT" />
