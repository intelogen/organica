      <option value="0">PARAM_DEFINE_LINKS_01</option>
      <option value="1">PARAM_DEFINE_LINKS_02</option>
    </param>
    <param name="display_links" type="list" default="1" label="LABEL_DISPLAY_LINKS" description="DESC_DISPLAY_LINKS">
      <option value="1">PARAM_DISPLAY_LINKS_01</option>
      <option value="0">PARAM_DISPLAY_LINKS_02</option>
    </param>
    <param name="link_new_account" type="text" default="" label="LABEL_CUSTOM_NEW_ACCOUNT" description="" />
    <param name="link_forgot_username" type="text" default="" label="LABEL_CUSTOM_FORGOT_USERNAME" description="" />
    <param name="link_forgot_password" type="text" default="" label="LABEL_CUSTOM_FORGOT_PASSWORD" description="" />
